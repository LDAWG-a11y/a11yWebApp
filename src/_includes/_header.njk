<a class="skip-link" href="#h1">Skip navigation</a>
<header class="header">
  <button class="header__themes-btn" id="themeTrigger" aria-expanded="false" aria-controls="themePanel" hidden>Themes</button>
  <div class="header__themes-panel" id="themePanel" hidden>
    <fieldset class="header__themes-fieldset">
      <legend class="header__themes-legend">Theme preference</legend>
      <button class="header__themes-btn--light" aria-pressed="false">Light</button>
      <button class="header__themes-btn--system" aria-pressed="false">System</button>
      <button class="header__themes-btn--dark" aria-pressed="false">Dark</button>
    </fieldset>
  </div>
  <nav class="main-nav" aria-label="primary">
    <div class="header__logo" role="img" aria-label="{{ site.siteName }} logo"></div>
    <ul class="main-nav__list">
      {%- for item in navLinks %}
        {%- if item.mainNav == true %}
        <li class="main-nav__item">
          <a class="main-nav__link"
          href="{{ item.url }}"
          {%- if item.url === page.url %}
            aria-current="page"
          {%- endif %}>{{ item.text }}</a>
        </li>
        {%- endif %}
      {%- endfor %}
    </ul>
  </nav>

  {%- if aaa == true %}
    {%- if page.url !== "/aaa/" %}
      <picture class="header__aaa-logo">
        <img
        sizes="(max-width: 220px) 100vw, 220px"
        srcset="
        /img/aaa-light_vpjlfm_c_scale,w_180.png 180w,
        /img/aaa-light_vpjlfm_c_scale,w_360.png 360w"
        src="/img/aaa-light_vpjlfm_c_scale,w_360.png"
          alt="Access and Assistance for All logo">
      </picture>
    {%- endif  %}
  {%- endif %}
 
  {%- if aaa !== true %}
    <h1 id="h1" class="header__welcome-text" tabindex="-1">
      {%- if page.url !== "/" %}
        {{ title }}
      {%- else %}
        {{ site.siteName }}
      {%- endif %}
    </h1>
  {%- else %}
    {% include "_aaaSubNav.njk" %}
    {% include "_aaaH1Logo.njk" %}
  {%- endif %}
</header>