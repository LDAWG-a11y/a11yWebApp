<a class="skip-link" href="#h1">Jump to content</a>
<header class="header">
  <nav class="main-nav">
    <img class="header__logo" src="https://via.placeholder.com/260x40/FFFFFF/9400D3?text=The+Brandname" alt="{{ site.siteName }} logo" class="header__logo">
    <ul class="main-nav__list">
      {% for item in navLinks %}
        {% if item.mainNav == true %}
        <li class="main-nav__item">
          <a class="main-nav__link"
          href="{{ item.url }}"
          {% if item.url === page.url %}
            aria-current="page"
          {% endif %}>{{ item.text }}</a>
        </li>
        {% endif %}
      {% endfor %}
    </ul>
  </nav>
  {% if page.url == '/'%}
    <h1 id="h1" class="header__welcome-text">
      Some catchy welcome message
    </h1>
  {% endif %}
</header>