<li class="card__item">
  <div class="card__top">
    {% set headinglevel = headingLevel if headingLevel else 'h3' %}
    <{{ headingLevel }} class="card__title"><a href="{{ guide.url }}" class="card__link">{{ guide.data.title }}</a></{{ headingLevel }}>
    <svg height="96" width="88"><use href="#mtaLogo"></use></svg>
  </div>
  <div class="card__bottom">
    <div class="card__tags">
      <strong class="tags__label">Tagged:</strong>
      {%- for tag in guide.data.tags | filterTagList %}
        <span class="card__tag">
          {{ tag }}
        </span>
      {%- endfor %}
    </div>
    <div class="card__meta">
      {% set guideAuthor = collections.writers | getAuthor(guide.data.author) %}
      <span class="card__author">
        <svg height="28" width="28"><use href="#avatarIcon"></use></svg>
        {% if not authorPage %}
          <a href="/authors/{{ guideAuthor.key }}" class="card__author-link">{{ guideAuthor.name.first }} {{ guideAuthor.name.last }}</a>
        {% else %}
        {{ guideAuthor.name.first }} {{ guideAuthor.name.last }}
        {% endif %}
      </span>
      <time class="card__date" datetime="{{ guide.data.date.toISOString() }}">
        <svg height="28" width="28"><use href="#dateIcon"></use></svg> {{ guide.data.date | readableDate }}</time>
    </div>
  </div>
</li>